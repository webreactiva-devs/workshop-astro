---
import WelcomeMessage from "../components/WelcomeMessage.astro";
import CustomLayout from "../layouts/CustomLayout.astro";

const response = await fetch("https://randomuser.me/api/");
const data = await response.json()
const randomUser = data.results[0];
---

<CustomLayout title="Aquí te saludo">
  <WelcomeMessage name={randomUser.name.first} surname="Pérez"></WelcomeMessage>
</CustomLayout>