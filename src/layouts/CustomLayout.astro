---
import FooterBlock from "../components/FooterBlock.astro";

export interface Props {
	title: string;
	author?: string;
}

const { title, author } = Astro.props.frontmatter || Astro.props;
---

<!DOCTYPE html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>
	</head>
	<body>
		<main class="main-content">
			<slot />
			{author && <p>Creado por: {author}</p>}
		</main>
		<FooterBlock></FooterBlock>
	</body>
</html>
<style is:global>
	html {
		font-family: system-ui, sans-serif;
	}
	.main-content {
		text-align: center;
	}
</style>
